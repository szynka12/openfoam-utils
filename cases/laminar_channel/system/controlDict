FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


libs ( userFunctionObjects );

application     simpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         100;

deltaT          1;

writeControl    timeStep;

writeInterval   20;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   12;

runTimeModifiable true;

adjustTimeStep  false;

maxCo           0.6;


functionObjSettings
{
    timeStart       0;
    writeControl    writeTime;
}

averageSettings
{
    restartOnRestart    true;
}

functions
{
    wallShearStress1
    {
    	type            wallShearStress;
    	libs            (fieldFunctionObjects);
        ${/functionObjSettings};
    }  


    VelocityPressureAverage
    {
        type            fieldAverage;
        libs            (fieldFunctionObjects);
        
        ${/functionObjSettings};
	${/averageSettings};
        fields
        (
            U
            {
                mean        on;
                prime2Mean  off;
                base        time;
            }
            p
            {
                mean        on;
                prime2Mean  off;
                base        time;
            }
	    wallShearStress
	    {
		mean on;
		prime2Mean off;
		base time;
            }
        );
    }
    
    kBudgetCorrelations
    {
        type    kBudgetCorrelations;
        libs    (userFunctionObjects);
        ${/functionObjSettings};
    }
    
    CorelationsAverage
    {
        type            fieldAverage;
        libs            (fieldFunctionObjects);
        
        ${/functionObjSettings};
	${/averageSettings};
        fields
        (
            dissipationCorrelation  
            {
                mean        on;
                prime2Mean  off;
                base        time;
            }
            turbulentDiffusionCorrelation
            {
                mean        on;
                prime2Mean  off;
                base        time;
            }

            reynoldsStressTensor
            {
                mean        on;
                prime2Mean  off;
                base        time;
            }
            
            velocityPressureGradientCorrelation
            {
                mean        on;
                prime2Mean  off;
                base        time;
            }
        );
    }

    kBudget
    {
        type    kBudget;
        libs    (userFunctionObjects);
        ${/functionObjSettings};
        executeControl writeTime;
    }

    cellFilter
    {
      type    cellExplicitFilter;
      libs    (userFunctionObjects);
      fields  (UMean);

      writeFilterVolume true;
      cache true;
      
      executeControl    writeTime;
      writeControl      writeTime;
      //targetMesh "filteredMesh";
    }

}




// ************************************************************************* //
