actions
(
    {
        name    boundary_faces;
        type    faceSet;
        action  new;
        source  boundaryToFace;
    }

    {
        name    boundary_cells;
        type    cellSet;
        action  new;
        source  faceToCell;
        set     boundary_faces;
        option  any;
    }
    
    {
        name    fixed_points;
        type    pointSet;
        action  new;
        source  cellToPoint;
        set     boundary_cells;
        option  all;
    }

